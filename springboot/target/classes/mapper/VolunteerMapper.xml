<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="org.example.mapper.VolunteerMapper">

    <select id="selectAll" resultType="org.example.entity.Volunteer" >
        select * from volunteer
        <where>
            <if test="name!=null">name like concat('%',#{name},'%')</if>
        </where>
    </select>

    <insert id="insert" parameterType="org.example.entity.Volunteer">
        insert into volunteer(username,password,role,name,sex,no,age,contact)
        values(#{username},#{password},#{role},#{name},#{sex},#{no},#{age},#{contact})
    </insert>

    <update id="updateById" parameterType="org.example.entity.Volunteer">
        update volunteer
        set username=#{username},password=#{password},role=#{role},name=#{name},sex=#{sex},no=#{no},age=#{age},contact=#{contact}
        where id=#{id}
    </update>

    <!-- 批量删除 -->
    <delete id="deleteByIds">
        DELETE FROM volunteer
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    </mapper>